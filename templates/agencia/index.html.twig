<div class='container'>
    <h1>Criar Agência</h1>

    <form class="mb-4 col-md-4">
        <label class="form-label">Selecione o</label>
        <select class="form-select" aria-label="Default select example">
        <option selected>Gerente</option>
        <option value="1">Um</option>
        <option value="2">Dois</option>
        <option value="3">Três</option>
        </select>

        <div class="mb-3">
            <label class="form-label">Telefone:</label>
            <input type="text" class="form-control" id="telefone" aria-describedby="telefoneHelp">
            {# <div class="form-text">Digite o telefone da Agência</div> #}
        </div>
            
            <h5 class="mb-3">Endereço</h5>
            <div class="mb-3">
                <label class="form-label">Rua</label>
                <input type="text" class="form-control" id="rua">
            </div>
            <div class="mb-3">
                <label class="form-label">Número</label>
                <input type="text" class="form-control" id="numero">
            </div>
            <div class="mb-3">
                <label class="form-label">Bairro</label>
                <input type="text" class="form-control" id="bairro">
            </div>
            <div class="mb-3">
                <label class="form-label">Cidade</label>
                <input type="text" class="form-control" id="cidade">
            </div>
            <div class="mb-3">
                <label class="form-label">Estado</label>
                <input type="text" class="form-control" id="estado">
            </div>
            <div class="mb-3">
                <label class="form-label">CEP</label>
                <input type="text" class="form-control" id="cep">
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
            
    </form>
</div>

{% endblock %}
